# ðŸ”¹ Agrupamentos (facets)
shodan stats apache --facets country
shodan stats nginx --facets org
shodan stats "port:22" --facets city
shodan stats "apache" --facets port

# ðŸ”¹ Exportar resultados
shodan search "apache country:BR" --fields ip_str,port,org,product --limit 100 > apache_brasil.csv
shodan search "nginx" --fields ip_str,port,org --limit 50 > nginx.csv


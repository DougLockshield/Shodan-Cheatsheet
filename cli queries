# ðŸ”¹ Campos personalizados
shodan search apache --fields ip_str,port,org
shodan search nginx --fields ip_str,port,product,version
shodan search "os:Windows 7 country:BR" --fields ip_str,port,org,product,version --limit 50

# ðŸ”¹ Buscas com CVE
shodan search vuln:"CVE-*"
shodan search vuln:CVE-2019-0708 --fields ip_str,port,org
shodan search "fortinet" --fields ip_str,vulns
shodan search "mikrotik" vuln:CVE-2018-14847

# ðŸ”¹ OrganizaÃ§Ã£o / ASN
shodan search org:"Microsoft Corporation"
shodan search asn:AS28573 country:BR --fields ip_str,port,org

# ðŸ”¹ ServiÃ§os especÃ­ficos
shodan search port:3389
shodan search "Anonymous user logged in"
shodan search product:elasticsearch
shodan search "X-Powered-By: PHP/5.6.40"
shodan search "Server: Apache"

# ðŸ”¹ LocalizaÃ§Ã£o geogrÃ¡fica
shodan search "webcam" country:US
shodan search "os:windows" country:BR
shodan search city:"SÃ£o Paulo"

# ðŸ”¹ Certificados SSL/TLS
